{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "dist",
      "rootDir": "lib",
      "module": "ESNext",
      "target": "ES2020",
      "noEmit": false,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["lib/**/*"]
  }
  